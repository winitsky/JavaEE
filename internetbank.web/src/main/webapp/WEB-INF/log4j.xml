<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="ErrorAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="Encoding" value="UTF-8" />
		<param name="File" value="${catalina.home}/webapps/internet-bank/logs/error_log.txt" />
		<param name="maxBackupIndex" value="10"/>
		<param name="MaxFileSize" value="1024K"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} [%t] %-5p %c - %m%n" />
		</layout>
	</appender>
	<appender name="InfoAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="Encoding" value="UTF-8" />
		<param name="File" value="${catalina.home}/webapps/internet-bank/logs/info_log.txt" />
		<param name="maxBackupIndex" value="10"/>
		<param name="MaxFileSize" value="1024K"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} [%t] %-5p %c - %m%n" />
		</layout>
	</appender>
	<logger name="ibank_error">
		<level value="error" />
	</logger>
	<logger name="ibank_info">
		<level value="info" />
	</logger>
	<root>
		<appender-ref ref="ErrortAppender" />
		<appender-ref ref="InfoAppender" />
	</root>
</log4j:configuration>